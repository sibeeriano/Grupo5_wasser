<!doctype html>
<html class="no-js" lang="ES">
<head><title>WASSER/Productos</title>
  <%- include('./partials/head') %>     
</head>    

<body>
  <%- include('./partials/preloader') %>

<header>
  <%- include('./partials/header') %>
</header> 

  <main>
    <br>
    <h1>Todos Nuestros Productos</h1>
    <br>
    <div class="container">    
      <div class="row">
        <% productos.forEach(producto => { %>            
          <div class="col-sm-3">
            <div class="panel panel-primary">
              <div class="panel-heading"><%- producto.nombre %>  </div>
             <div class="panel-body"><a href="/productos/detalle/<%= producto.id %>"><img src="/images/imagenProducto/<%=producto.imagenes %> " class="img-responsive" style="width:100%" alt="Image"></a></div>
              <div class="panel-footer">$<%- producto.precio %> </div>
              <div class="d-flex justify-content-center">
                
            
              </div>    
              <div class="panel-footer">
                <br>
                <br>
              </div>
              </div>
              </div>
              <% }) %>
              </div>
              </div>  
                
  </main>           
  <footer>
        <%- include('./partials/footer') %>
  </footer>           
        <%- include('./partials/scripts') %>  
  </body>
  </html>    
  
  
                
                
            
                
            
              
              
    
    
            
 

      
     