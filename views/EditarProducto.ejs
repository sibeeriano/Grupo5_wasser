<main>  
       
    <div class="form-register2">
        <h4>Editar producto (Admin)</h4>
        <% dbProducts.forEach(products => { %>
            <% if (products.id == idProducto) { %>
          <form method="POST" action="/productos/EditarProducto/<%= products.id %>?_method=PUT" enctype="multipart/form-data">
          
        <input class="controlls2" type="" name="nombre"  placeholder="Nombre producto" value="<%= products.nombre %> " required>

        
        <input class="controlls2" type="" name="precio" placeholder="Precio" value="<%= products.precio %> " required>      
        
        <label for="Categorias"></label>
            <select name="id_category" class="controlls2">
                <% if (products.id_categoria == "baño") { %>                
                <option value="baño">Griferia Baño</option>
                <% } else if (products.id_categoria == "cocina") { %>
                <option value="cocina">Griferia Cocina</option>
                <% } else if (products.id_categoria == "bachas") { %>
                <option value="bachas">Bachas</option>
                <% } else if (products.id_categoria == "sanitarios") { %>
                <option value="sanitarios">Sanitarios</option>
                <% } else if (products.id_categoria == "bañeras") { %>
                <option value="bañeras">Bañeras y Duchas</option>
                <% } else { %>
                <option value="accesorios">Accesorios Varios</option> 
                <% } %>
