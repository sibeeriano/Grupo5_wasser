        <input class="controlls2"  type="file" name="imagenes" value="<%= products.imagenes %> ">

      </label>
        <label for="controlls2"></label>    
        <div class="botons">
          <label for="exampleFormControlTextarea1">Descripción</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"><%= products.descripcion %></textarea>
      </div>
                   
      <div class="mt-5 mr-5 d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-primary">Guardar</button></div>
